# Configuración de la aplicación
APP_TITLE=Base Auth Backend
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Configuración de la base de datos PostgreSQL
# Para desarrollo local con Docker Compose
DATABASE_URL=postgresql://postgres:1234@localhost:5432/base_auth
# Para desarrollo local sin Docker (PostgreSQL instalado localmente)
# DATABASE_URL=postgresql://postgres:tu_password@localhost:5432/base_auth
# Para producción
# DATABASE_URL=postgresql://usuario:password@servidor:5432/base_auth

DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Configuración de seguridad
# IMPORTANTE: Cambia esta clave en producción
SECRET_KEY=tu-clave-secreta-super-segura-aqui-cambiala-en-produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuración para Docker Compose
# Cuando uses docker-compose, cambia localhost por 'db'
# DATABASE_URL=postgresql://postgres:1234@db:5432/base_auth
